<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wishlist</title>
    <link rel="stylesheet" href="../css/wishList.css">
    <%- include('./partials/icon.ejs'); %>
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <%- include('./partials/header'); %>
</head>
<body>
    
       <h1 style="text-align: center;padding: 20px;">My Wishlist</h1>
       <!--shop-->
       <section class="shop container">
        <% if (wishlist.length > 0) { %>
          <div class="shop-content">
            <% wishlist.forEach((prod, index) => { %>
              <div class="product-box">
                <img src="/images/<%= prod.image %>" alt="" class="img">
                <h2 class="product-title"><%= prod.name %></h2>
                <span class="price"><%= prod.price %>$</span>
                <div class="add-cart">
                  <i class='bx bxs-message-alt-x' onclick="removeFromWishlist('<%= prod.id %>')"></i>                        
                </div>
              </div>
              <% if ((index + 1) % 3 === 0) { %>
                </div>
                <div class="shop-content">
              <% } %>
            <% }) %>
          </div>
        <% } else { %>
          <p>There are no products to display...</p>
        <% } %>
      </section>
 
      <%- include("./partials/footer.ejs") %>
    </body>
  <script src="../js/interface.js"></script>
</html>